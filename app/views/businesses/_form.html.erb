<div>
<!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a data-target="#contact" aria-controls="contact" role="tab" data-toggle="tab">Contact Information</a></li>
    <li role="presentation"><a data-target="#profile" aria-controls="profile" role="tab" data-toggle="tab">Business Settings</a></li>
    <li role="presentation"><a data-target="#messages" aria-controls="messages" role="tab" data-toggle="tab">Income</a></li>
    <li role="presentation"><a data-target="#settings" aria-controls="settings" role="tab" data-toggle="tab">Deductions</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="contact">
      <%= simple_form_for [@user, @business] do |f| %>
      <%= f.error_notification %>
      <div class="content-div">
        <div class="form-inputs">
          <%= f.input :business_name %>
          <%= f.input :business_start, label: "Business Start Date", :order => [:month, :day, :year] %>
          <%= f.input :business_street_1 %>
          <%= f.input :business_street_2 %>
          <%= f.input :business_city %>
          <%= f.input :business_state, label: "State", :input_html => {:maxlength =>2, :style=> 'width: 60px'} %>
          <%= f.input :business_zip, label: "Zip Code", :input_html => {:maxlength =>5, :style=> 'width: 120px'} %>
          <%= f.input :ein, label: "EIN" %>
          <%= f.input :biz_type, label: "Business Type", collection: ['S-corp', 'Partnership'] %>
          
        </div>
  
        <div class="form-actions" class: "btn btn-primary">
        <%= f.button :submit, 'Save', :class => "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
      <%= simple_form_for [@user, @business] do |f| %>
      <%= f.error_notification %>
      <div class="content-div">
        <div class="form-inputs">
          <%= f.input :bac, label: "Business Activity Code", :input_html => {:maxlength =>5, :style=> 'width: 120px'} %>
          <%= f.input :method, label: "Accounting Method", collection: ['Cash Basis', 'Accrual Basis'], :input_html => {:style=> 'width: 220px'} %>
          <%= f.input :activity, label: "Business Activity" %>
          <%= f.input :product, label: "Business Product" %>
          <%= f.input :schb3, label: "Any shareholder a disregarded entity, estate, or trust?", collection: ['Yes', 'No'], :input_html => {:style=> 'width: 220px'} %>
          <%= f.input :schb4a %>
          <%= f.input :schb4b %>
          <%= f.input :schb10a %>
          <%= f.input :schb10b %>
        </div>
  
        <div class="form-actions" class: "btn btn-primary">
        <%= f.button :submit, 'Save', :class => "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
    <div role="tabpanel" class="tab-pane" id="messages">
      <%= simple_form_for [@user, @business] do |f| %>
      <%= f.error_notification %>
      <div class="content-div">
        <div class="form-inputs">
          <%= f.input :gross_receipts, label: "Gross Receipts or Sales", :input_html => {:style=> 'width: 220px'} %>
          <%= f.input :returns, :input_html => {:style=> 'width: 220px'} %>
          <%= f.input :cost_goods, label: "Cost of Goods Sold:", :input_html => {:style=> 'width: 220px'} %>
          <%= f.input :other_income, label: "Other Income", :input_html => {:style=> 'width: 220px'} %>
          
        </div>
  
        <div class="form-actions" class: "btn btn-primary">
        <%= f.button :submit, 'Save', :class => "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
    <div role="tabpanel" class="tab-pane" id="settings">
      <%= simple_form_for [@user, @business] do |f| %>
      <%= f.error_notification %>
      <div class="content-div">
        <div class="form-inputs">
          <%= f.input :off_comp %>
          <%= f.input :salaries %>
          <%= f.input :repairs %>
          <%= f.input :bad_debt %>
          <%= f.input :rents %>
          <%= f.input :taxes %>
          <%= f.input :interest %>
          <%= f.input :depreciation %>
          <%= f.input :advertising %>
          <%= f.input :pension %>
          <%= f.input :emp_ben %>
          <%= f.input :other_deductions %>
        </div>
  
        <div class="form-actions" class: "btn btn-primary">
        <%= f.button :submit, 'Save', :class => "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>





